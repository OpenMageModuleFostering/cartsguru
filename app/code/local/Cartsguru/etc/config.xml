<?xml version="1.0"?>
<config>
    <!-- plugin name -->
    <modules>
        <Cartsguru>
            <version>1.1.2</version>
        </Cartsguru>
    </modules>
    <global>
        <!--add some attributes for easy send it throw api -->
        <sales>
            <quote>
                <customer_attributes>
                    <telephone />
                    <country />
                </customer_attributes>
            </quote>
        </sales>
        <fieldsets>
            <sales_convert_quote>
                <country>
                    <to_order>*</to_order>
                </country>
                <telephone>
                    <to_order>*</to_order>
                </telephone>
            </sales_convert_quote>
            <sales_convert_quote>
                <country>
                    <to_order>*</to_order>
                </country>
                <telephone>
                    <to_order>*</to_order>
                </telephone>
            </sales_convert_quote>
            <sales_convert_order>
                <country>
                    <to_order>*</to_order>
                </country>
                <telephone>
                    <to_quote>*</to_quote>
                </telephone>
            </sales_convert_order>
        </fieldsets>
        <models>
            <cartsguru>
                <class>Cartsguru_Model</class>
                <resourceModel>cartsguru_resource</resourceModel>
            </cartsguru>
            <cartsguru_resource>
                <class>Cartsguru_Model_Resource</class>
            </cartsguru_resource>
            <!--add rewrite base class for extend it -->
            <sales>
                <rewrite>
                    <order_api_v2>Cartsguru_Model_Sales_Order_Api_V2</order_api_v2>
                </rewrite>
            </sales>
        </models>
        <blocks>
            <cartsguru>
                <class>Cartsguru_Block</class>
            </cartsguru>
        </blocks>
        <helpers>
            <cartsguru>
                <class>Cartsguru_Helper</class>
            </cartsguru>
        </helpers>
        <resources>
            <cartsguru_setup>
                <setup>
                    <module>Cartsguru</module>
                </setup>
            </cartsguru_setup>
        </resources>
        <!--In this section we register hooks call api-->
        <events>
            <admin_system_config_changed_section_cartsguru>
                <observers>
                    <cartsguru_admin_system_config_changed_section_cartsguru>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>configSaveAfter</method>
                    </cartsguru_admin_system_config_changed_section_cartsguru>
                </observers>
            </admin_system_config_changed_section_cartsguru>
            <sales_order_place_after>
                <observers>
                    <cartsguru_sales_order_save_after>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>orderSaveAfter</method>
                    </cartsguru_sales_order_save_after>
                </observers>
            </sales_order_place_after>
            <sales_order_saves_after>
                <observers>
                    <cartsguru_sales_order_save_after>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>orderSaveAfter</method>
                    </cartsguru_sales_order_save_after>
                </observers>
            </sales_order_saves_after>
            <!-- when customer register this hooks call two times-->
            <customer_save_after>
                <observers>
                    <cartsguru_customer_save_after>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>customerSaveAfter</method>
                    </cartsguru_customer_save_after>
                </observers>
            </customer_save_after>
            <customer_register_success>
                <observers>
                    <cartsguru_customer_register_success>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>customerSaveAfter</method>
                    </cartsguru_customer_register_success>
                </observers>
            </customer_register_success>
            <sales_quote_remove_item>
                <observers>
                    <cartsguru_sales_quote_remove_item>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>productAddAfter</method>
                    </cartsguru_sales_quote_remove_item>
                </observers>
            </sales_quote_remove_item>
            <checkout_cart_product_add_after>
                <observers>
                    <cartsguru_cart_product_add_after>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>productAddAfter</method>
                    </cartsguru_cart_product_add_after>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_save_before>
                <observers>
                    <cartsguru_sales_quote_save_before>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>quoteSaveBefore</method>
                    </cartsguru_sales_quote_save_before>
                </observers>
            </sales_quote_save_before>
            <sales_quote_save_after>
                <observers>
                    <cartsguru_sales_quote_save_after>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>productAddAfter</method>
                    </cartsguru_sales_quote_save_after>
                </observers>
            </sales_quote_save_after>
            <customer_login>
                <observers>
                    <customer_login>
                        <type>singleton</type>
                        <class>cartsguru/observer</class>
                        <method>productAddAfter</method>
                    </customer_login>
                </observers>
            </customer_login>
        </events>
    </global>
    <frontend>
        <routers>
            <webservice>
                <use>standard</use>
                <args>
                    <frontName>webservice</frontName>
                    <module>Cartsguru</module>
                </args>
            </webservice>
        </routers>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>CartsGuru.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
        <acl>
            <!-- in this section we add acl for admin settings -->
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cartsguru>
                                            <title>Cartsguru - All</title>
                                        </cartsguru>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>